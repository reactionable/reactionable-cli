{
  "compilerOptions": {
    "module": "ES2022",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "dist", "**/*.spec.ts"]
}
